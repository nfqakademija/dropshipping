{% extends 'dashboard/index.html.twig' %}

{% block title %}AliExpress{% endblock %}

{% block content %}

    <div class="title-search-block">

        <div class="title-block">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="title">
                        AliExpress products
                    </h3>
                </div>
            </div>
        </div>
    </div>

    <div class="card items">
        <table id="aliexpresslist" class="display table">
            <thead>
            <tr>
                <th>No.</th>
                <th>Title</th>
                <th>Stock</th>
                <th>Price</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            {% for item in aliExpressItems %}
                <tr>
                    <td>{{ loop.index0 + 1 }}</td>
                    <td><a href="{{ path('aliItemEdit', {'id': item.id}) }}">{{ item.title }}</a></td>
                    <td>{{ item.stock }}</td>
                    <td>{{ item.price }}</td>
                    <td><a href="{{ path('aliItemDescription', {'id': item.id}) }}">View</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}

                            <ebay-charts inline-template v-cloak>
                                    <sales-chart></sales-chart>
                            </ebay-charts>
                        </section>
                        <section class="section">
                            <div class="row sameheight-container">
                                <div class="col col-12 col-sm-12 col-md-12 stats-col">
                                    <div class="row sameheight-container">
                                        <div class="col col-12 col-sm-12 col-md-6 col-xl-5 stats-col">
                                            <div class="card sameheight-item stats" data-exclude="xs">
                                                <div class="card-block">
                                                    <div class="title-block">
                                                        <h4 class="title"> My Summary </h4>
                                                    </div>
                                                    <div class="row row-sm stats-container">
                                                        <div class="col-12 col-sm-6 stat-col">
                                                            <div class="stat-icon">
                                                                <i class="fa fa-rocket"></i>
                                                            </div>
                                                            <div class="stat">
                                                                <div class="value"> {{ summaryData['active_list'] }} </div>
                                                                <div class="name"> Active items </div>
                                                            </div>
                                                            <div class="progress stat-progress">
                                                                <div class="progress-bar" style="width: 10%;"></div>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6 stat-col">
                                                            <div class="stat-icon">
                                                                <i class="fa fa-shopping-cart"></i>
                                                            </div>
                                                            <div class="stat">
                                                                <div class="value"> {{ summaryData['total_sold'] }} </div>
                                                                <div class="name"> Items sold </div>
                                                            </div>
                                                            <div class="progress stat-progress">
                                                                <div class="progress-bar" style="width: 25%;"></div>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6  stat-col">
                                                            <div class="stat-icon">
                                                                <i class="fas fa-chart-line"></i>
                                                            </div>
                                                            <div class="stat">
                                                                <div class="value"> {{ summaryData['total_sold_currency'] }} {{ summaryData['total_sold_value'] }} </div>
                                                                <div class="name"> Monthly income </div>
                                                            </div>
                                                            <div class="progress stat-progress">
                                                                <div class="progress-bar" style="width: 60%;"></div>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6  stat-col">
                                                            <div class="stat-icon">
                                                                <i class="fa fa-dollar"></i>
                                                            </div>
                                                            <div class="stat">
                                                                <div class="value">USD {{ lastMonthData['lastMonth']['soldValue'] }} </div>
                                                                <div class="name"> Last Month </div>
                                                            </div>
                                                            <div class="progress stat-progress">
                                                                <div class="progress-bar" style="width: 34%;"></div>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6  stat-col">
                                                            <div class="stat-icon">
                                                                <i class="fa fa-dollar"></i>
                                                            </div>
                                                            <div class="stat">
                                                                <div class="value"> {{ lastMonthData['lastMonth']['soldItems'] }} </div>
                                                                <div class="name"> Last Month Items sold</div>
                                                            </div>
                                                            <div class="progress stat-progress">
                                                                <div class="progress-bar" style="width: 49%;"></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

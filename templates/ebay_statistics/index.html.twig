{% extends 'base.html.twig' %}

{% block title %} Ebay Settings {% endblock %}

{% block body %}
    <div class="main-wrapper">
        <div class="app" id="app">
            {% include('layouts/header.html.twig') %}
            {% include('layouts/aside-nav.html.twig') %}
            <div class="sidebar-overlay" id="sidebar-overlay"></div>
            <div class="sidebar-mobile-menu-handle" id="sidebar-mobile-menu-handle"></div>
            <div class="mobile-menu-handle"></div>
            <article class="content dashboard-page">
                {% block content %}
                    {% if app.user.getOldEbayAuth is not null %}
                        <section class="section">
                            <div class="row sameheight-container">
                            </div>
                        </section>
                        <section class="section">
                            <div class="row sameheight-container">
                                <div class="col col-12 col-sm-12 col-md-12 stats-col">
                                    <div class="row sameheight-container">
                                        <div class="col col-12 col-sm-12 col-md-6 col-xl-5 stats-col">
                                            <div class="card sameheight-item stats" data-exclude="xs">
                                                <div class="card-block">
                                                    <div class="title-block">
                                                        <h4 class="title"> My Summary </h4>
                                                    </div>
                                                    <div class="row row-sm stats-container">
                                                        <div class="col-12 col-sm-6 stat-col">
                                                            <div class="stat-icon">
                                                                <i class="fa fa-rocket"></i>
                                                            </div>
                                                            <div class="stat">
                                                                <div class="value"> {{ summaryData['active_list'] }} </div>
                                                                <div class="name"> Active items </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6 stat-col">
                                                            <div class="stat-icon">
                                                                <i class="fa fa-shopping-cart"></i>
                                                            </div>
                                                            <div class="stat">
                                                                <div class="value"> {{ summaryData['total_sold'] }} </div>
                                                                <div class="name"> Items sold </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6  stat-col">
                                                            <div class="stat-icon">
                                                                <i class="fas fa-chart-line"></i>
                                                            </div>
                                                            <div class="stat">
                                                                <div class="value">EUR {{ summaryData['total_sold_value'] }} </div>
                                                                <div class="name"> Monthly income </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6  stat-col">
                                                            <div class="stat-icon">
                                                                <i class="fas fa-dollar"></i>
                                                            </div>
                                                            <div class="stat">
                                                                <div class="value">EUR {{ soldToBonus['LastMonthSoldPrices'] }} </div>
                                                                <div class="name"> Last Month </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6  stat-col">
                                                            <div class="stat-icon">
                                                                <i class="fa fa-shopping-cart"></i>
                                                            </div>
                                                            <div class="stat">
                                                                <div class="value"> {{ soldToBonus['LastMonthSoldItems'] }} </div>
                                                                <div class="name"> Last Month Items sold</div>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6  stat-col">
                                                            <div class="stat-icon">
                                                                <i class="fa fa-shopping-cart"></i>
                                                            </div>
                                                            <div class="stat">
                                                                <div class="value"> {{ soldToBonus['ThisMonthSoldItems'] }} </div>
                                                                <div class="name"> Current Month Items sold</div>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6  stat-col">
                                                            <div class="stat-icon">
                                                                <i class="fa fa-rocket"></i>
                                                            </div>
                                                            <div class="stat">
                                                                <div class="value"> {{ soldToBonus['LeftToBonus'] }} </div>
                                                                <div class="name"> Left up to goal </div>
                                                            </div>
                                                            <div class="progress stat-progress">
                                                                <div class="progress-bar" style="width: {{ soldToBonus['TotalPercent'] }}%;"></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col col-12 col-sm-12 col-md-6 col-xl-7 history-col">
                                            <div class="card sameheight-item" data-exclude="xs" id="dashboard-history">
                                                <div class="card-header card-header-sm bordered">
                                                    <div class="header-block">
                                                        <h3 class="title">Sales Statistics</h3>
                                                    </div>
                                                    <ul class="nav nav-tabs pull-right" role="tablist">
                                                        <li class="nav-item">
                                                            <a class="nav-link active" href="#sales" role="tab" data-toggle="tab">Sales</a>
                                                        </li>
                                                        <li class="nav-item">
                                                            <a class="nav-link" href="#profit" role="tab" data-toggle="tab">Profit</a>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="card-block">
                                                    <div class="tab-content">
                                                        <div role="tabpanel" class="tab-pane active fade show" id="sales">
                                                            <p class="title-description"> Number of sales last 30 days </p>
                                                             <sales-chart v-cloak></sales-chart>
                                                        </div>
                                                        <div role="tabpanel" class="tab-pane fade" id="profit">
                                                            <p class="title-description"> Your profit of sales last 30 days </p>
                                                            <profit-chart v-cloak></profit-chart>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    {% endif %}
                {% endblock content %}
            </article>
        </div>
    </div>
    </div>
{% endblock %}